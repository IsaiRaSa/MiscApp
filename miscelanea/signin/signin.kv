#:import hex kivy.utils.get_color_from_hex

<SigninWindow>:
	id: main_win
	orientation: 'vertical'
	BoxLayout:
		size_hint_y:.05
		canvas.before:
			Color:
				rgba: hex('#68A780')
			Rectangle:
				size: self.size
				pos: self.pos

	BoxLayout:
		canvas.before:
			Color:
				rgba: hex('#F2F2F2')
			Rectangle:
				size: self.size
				pos: self.pos
		size_hint_y:.9
		Label:
			size_hint_x:.3
		BoxLayout:
			size_hint_x:.4
			orientation: 'vertical'
			Label:
				size_hint_y:.15
				text: 'Bienvenido'
				color: (0,0,0,1)
			Label:
				id: signin_notification
				size_hint_y:.15
				color: (1,.2,.2,1)
			TextInput:
				id: username
				size_hint_y:.1
				hint_text: 'Nombre de Usuario'
				multiline: False
				write_tab: False
				on_text_validate: root.verify_user(self.text, password.text)
			TextInput:
				id: password
				size_hint_y:.1
				hint_text: 'Contrase√±a'
				multiline: False
				write_tab: False
				password: True
				on_text_validate: root.verify_user(username.text, self.text)
			Button:
				size_hint_y:.1
				background_normal: ''
				background_color: hex('#393939')
				text: 'Ingresar'
				on_release: root.verify_user(username.text, password.text)
			Label:
				size_hint_y: .4
		Label:
			size_hint_x: .3

	BoxLayout:
		size_hint_y:.05
		canvas.before:
			Color:
				rgba: hex('#68A780')
			Rectangle:
				size: self.size
				pos: self.pos